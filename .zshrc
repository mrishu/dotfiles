export MAMBA_EXE='/home/adi/.local/bin/micromamba';
export MAMBA_ROOT_PREFIX='/home/adi/micromamba';
__mamba_setup="$("$MAMBA_EXE" shell hook --shell zsh --root-prefix "$MAMBA_ROOT_PREFIX" 2> /dev/null)"
